{
	"$schema": "http://json-schema.org/draft-07/schema#",
	"title": "Single Milestone Schema",
	"type": "object",
	"required": ["title"],
	"additionalProperties": false,
	"properties": {
		"title": { "type": "string" },
		"description": { "type": "string" },
		"number": { "type": "integer" },
		"dueDate": { "type": "string", "format": "date" },
		"state": {
			"type": "string",
			"enum": ["open", "closed"]
		}
	}
}
