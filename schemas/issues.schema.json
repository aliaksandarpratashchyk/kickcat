{
	"$schema": "http://json-schema.org/draft-07/schema#",
	"title": "Issues Collection Schema",
	"type": ["object", "array"],

	"oneOf": [
		{
			"title": "Root object with `issues`",
			"type": "object",
			"required": ["issues"],
			"properties": {
				"$schema": { "type": "string" },
				"issues": {
					"type": "array",
					"items": { "$ref": "./issue.schema.json" }
				}
			},
			"additionalProperties": false
		},
		{
			"title": "Root is direct array",
			"type": "array",
			"items": { "$ref": "./issue.schema.json" }
		}
	]
}
