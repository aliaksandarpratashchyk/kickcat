{
	"$schema": "http://json-schema.org/draft-07/schema#",
	"title": "Single Label Schema",
	"type": "object",
	"required": ["name", "color"],
	"additionalProperties": false,
	"properties": {
		"name": { "type": "string" },
		"color": {
			"type": "string",
			"pattern": "^[0-9a-fA-F]{6}$",
			"description": "Hex color without #"
		},
		"description": { "type": "string" }
	}
}
